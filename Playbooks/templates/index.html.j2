        .timeline-item h3 { margin-bottom:5px; color:#333; }
        .timeline-item span { font-size:0.9rem; color:#777; }

        /* Skills */
        .skills { display:flex; flex-wrap:wrap; gap:20px; justify-content:center; }
        .skill { width:200px; }
        .skill-name { margin-bottom:5px; font-weight:bold; }
        .skill-bar { background:#ddd; border-radius:5px; overflow:hidden; height:15px; }
        .skill-bar-inner { height:100%; background:#4CAF50; width:0%; text-align:right; padding-right:5px; color:#fff; font-size:0.8rem; line-height:15px; }

        /* Projects */
